<p id="notice"><%= notice %></p>

<h1>Issue Skills</h1>

<table>
  <thead>
    <tr>
      <th>Issue</th>
      <th>Skill</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issue_skills.each do |issue_skill| %>
      <tr>
        <td><%= issue_skill.issue_id %></td>
        <td><%= issue_skill.skill_id %></td>
        <td><%= link_to 'Show', issue_skill %></td>
        <td><%= link_to 'Edit', edit_issue_skill_path(issue_skill) %></td>
        <td><%= link_to 'Destroy', issue_skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

